<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:padding="8dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vaccineCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_hospital"
            android:drawablePadding="5dp"
            android:text="Vaccination Center"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/vaccineLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:layout_below="@+id/vaccineCenter"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:text="Location"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/vaccineTimings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:layout_below="@+id/vaccineLocation"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:drawablePadding="5dp"
            android:text="Vaccinating Timings"
            android:textColor="#000000"
            />
        <LinearLayout
            android:id="@+id/mLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccineTimings"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/vaccinName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_vaccine"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="Vaccination Name"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/vaccineFees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_money"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="Vaccine Charges"
                android:textColor="#000000"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mLinearLayout"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/vaccinationAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="Vaccination Age Group"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/isAvailable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_storefront_24"
                android:drawablePadding="4dp"
                android:padding="4dp"
                android:text="Availability "
                android:textColor="#000000"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>